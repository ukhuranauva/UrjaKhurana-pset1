<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.urja.urjakhurana_pset1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am Mr. Potato Head!"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView"
        android:textSize="18sp" />

    <TextView
        android:text="Dress Me Up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox12"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <CheckBox
        android:text="Arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:id="@+id/checkBox" />

    <CheckBox
        android:text="Ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:text="Eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/checkBox4" />

    <CheckBox
        android:text="Eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox5"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox6" />


    <CheckBox
        android:text="Hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox12"
        android:layout_above="@+id/checkBox13"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"/>

    <CheckBox
        android:text="Mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/checkBox12"
        android:id="@+id/checkBox13" />
    <CheckBox
        android:text="Mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox12"
        android:id="@+id/checkBox14" />

    <CheckBox
        android:text="Nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox14"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/checkBox12"
        android:id="@+id/checkBox15" />

    <CheckBox
        android:text="Shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox12"
        android:id="@+id/checkBox16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/body"
        android:id="@+id/imageView"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_marginBottom="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
